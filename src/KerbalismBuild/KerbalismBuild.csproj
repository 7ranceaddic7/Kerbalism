<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="12.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <!-- 
  <Import Project="$(MSBuildExtensionsPath)\$(MSBuildToolsVersion)\Microsoft.Common.props" Condition="Exists('$(MSBuildExtensionsPath)\$(MSBuildToolsVersion)\Microsoft.Common.props')" />
  -->
  
  <!-- Create this file and adjust the values according to your KSP dev environment -->
  <!-- There is a "DevEnvConfig.xml.example" file that you can copy -->
  <Import Condition="Exists('..\..\buildscripts\DevEnvConfig.xml')" Project="..\..\buildscripts\DevEnvConfig.xml" />
  <Import Condition="Exists('..\..\buildscripts\BuildGlobals.xml')" Project="..\..\buildscripts\BuildGlobals.xml" />
  <PropertyGroup>
    <Configuration Condition=" '$(Configuration)' == '' ">Debug</Configuration>
    <Platform Condition=" '$(Platform)' == '' ">AnyCPU</Platform>
    <ProjectGuid>{1C9C2C4A-FC39-4F84-B4A2-1A5E38C14815}</ProjectGuid>
    <OutputType>Exe</OutputType>
    <RootNamespace>KerbalismBuild</RootNamespace>
    <AssemblyName>KerbalismBuild</AssemblyName>
    <TargetFrameworkVersion>v3.5</TargetFrameworkVersion>
    <FileAlignment>512</FileAlignment>
    <Deterministic>true</Deterministic>
  </PropertyGroup>

  <!-- /////////////////////////////////////////////////// -->
  <!-- //////////// DEBUG CONFIGURATION SETUP //////////// -->
  <!-- /////////////////////////////////////////////////// -->
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">
    <PlatformTarget>AnyCPU</PlatformTarget>
    <DebugSymbols>true</DebugSymbols>
    <DebugType>full</DebugType>
    <Optimize>false</Optimize>
    <ErrorReport>prompt</ErrorReport>
    <WarningLevel>4</WarningLevel>
    <StartAction>Program</StartAction>
    <RunPostBuildEvent>OnBuildSuccess</RunPostBuildEvent>
    <!-- Default values. These will be overriden if the DevEnvConfig.xml file exists-->
    <DefineConstants>TRACE;DEBUG;ENABLE_PROFILER;DEBUG_PROFILER;DEBUG_RESOURCES</DefineConstants>
    <StartProgram>KSP_x64.exe</StartProgram>
    <StartWorkingDirectory>..\</StartWorkingDirectory>
  </PropertyGroup>
  
  <!-- ///////////////////////////////////////////////////// -->
  <!-- //////////// RELEASE CONFIGURATION SETUP //////////// -->
  <!-- ///////////////////////////////////////////////////// -->
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' ">
    <PlatformTarget>AnyCPU</PlatformTarget>
    <DebugType>none</DebugType>
    <Optimize>true</Optimize>
    <ErrorReport>prompt</ErrorReport>
    <WarningLevel>4</WarningLevel>
    <StartAction>Program</StartAction>
    <RunPostBuildEvent>OnBuildSuccess</RunPostBuildEvent>
    <!-- Default values. These will be overriden if the DevEnvConfig.xml file exists-->
    <StartProgram>KSP_x64.exe</StartProgram>
    <StartWorkingDirectory>..\</StartWorkingDirectory>
  </PropertyGroup>

  <!-- /////////////////////////////////////////////////// -->
  <!-- ///////// USER-DEFINED (DevEnvConfig.xml) ///////// -->
  <!-- /////////////////////////////////////////////////// -->
  <!-- this must be after the default configuration setups -->
  <Choose>
    <When Condition="Exists('..\..\buildscripts\DevEnvConfig.xml')">
      <PropertyGroup>
        <DefineConstants Condition="'$(Configuration)' == 'Debug'">TRACE;DEBUG;$(DebugDefineConstants);$(KSPDevVersion)</DefineConstants>
        <StartProgram>$(KSPDevPath)\$(KSPDevExecutable)</StartProgram>
        <StartWorkingDirectory>$(KSPDevPath)</StartWorkingDirectory>
      </PropertyGroup>
    </When>
  </Choose>

  <!-- /////////////////////////////////////////////////// -->
  <!-- /////// RELEASE CONFIGURATION BUILD SCRIPT //////// -->
  <!-- /////////////////////////////////////////////////// -->
  <Import Condition="$(Configuration)==Release AND Exists('..\..\GameData\Kerbalism\KerbalismBootstrap.xml')" Project="..\..\GameData\Kerbalism\KerbalismBootstrap.xml" />

  <Target Name="Build" Condition="$(Configuration)==Release AND Exists('..\..\GameData\Kerbalism\KerbalismBootstrap.xml')">

    <Message Text="[KERBALISM-BUILD] Initiating RELEASE build..." Importance="high" />
    <Message Text="[KERBALISM-BUILD] Building KerbalismBootstrap..." Importance="high" />
    <MSBuild
      Projects="../KerbalismBootstrap/KerbalismBootstrap.csproj"
      Properties="Configuration=Release"/>

    <Message Text="[KERBALISM-BUILD] Building all kbins..." Importance="high" />
    <MSBuild 
      Projects="KerbalismBuild.csproj"
      Properties="KBinVersionConstant=%(KBinVersionConstant.Identity);KSPBuildVersion=%(KBinVersionConstant.KSPBuildVersion)"
      Targets="KBinGenerator"/>

    <Message Text="[KERBALISM-BUILD] Cleaning output folder..." Importance="high" />
    <RemoveDir Directories="$(IntermediateOutputPath)\" />

    <Message Text="[KERBALISM-BUILD] Kerbalism RELEASE build generated in $(OutputPath)" Importance="high" />
     
  </Target>

  <Target Name="KBinGenerator">

    <PropertyGroup>
      <KBinOutputPath>$(OutputPath)/$(KBinVersionConstant)</KBinOutputPath>
      <KBinConstant>KSP$(KBinVersionConstant)</KBinConstant>
      <KBinFileName>Kerbalism$(KBinVersionConstant).kbin</KBinFileName>
    </PropertyGroup>

    <Message Text="[KERBALISM-BUILD] Generating '$(KBinFileName)' using KSP $(KSPBuildVersion) dlls..." Importance="high" />

    <Copy SourceFiles="$(OutputPath)\KerbalismBootstrap.dll" DestinationFolder="$(KBinOutputPath)" />

    <Message Text="[KERBALISM-BUILD] Extracting KSP $(KSPBuildVersion) dlls..." Importance="high" />
    <MSBuild
      Projects="KerbalismBuild.csproj"
      Properties="KSPVersion=$(KSPBuildVersion)"
      Targets="ExtractKSPDlls"/>

    <Message Text="[KERBALISM-BUILD] Building kerbalism project with the '$(KBinConstant)' constant..." Importance="high" />
    <MSBuild
      Projects="../Kerbalism/Kerbalism.csproj"
      Properties="Configuration=Release;DefineConstants=$(KBinConstant);OutputPath=$(KBinOutputPath)"
      />

    <Message Text="[KERBALISM-BUILD] Cleaning temporary files..." Importance="high" />
    <Move SourceFiles="$(KBinOutputPath)\Kerbalism.dll" DestinationFiles="$(OutputPath)\$(KBinFileName)" />
    <RemoveDir Directories="$(KBinOutputPath)" />

    <Message Text="[KERBALISM-BUILD] '$(KBinFileName)' generated." Importance="high" />
  </Target>
  
</Project>